<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/payment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Details"
        android:textColor="@color/Main_color"
        android:textSize="22dp"
        android:textFontWeight="500"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/line_15"
        android:layout_width="112dp"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:layout_marginTop="12dp"
        android:background="@drawable/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="@id/payment_details"
        app:layout_constraintStart_toStartOf="@+id/payment_details"
        app:layout_constraintTop_toBottomOf="@+id/payment_details" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/profile_image"
        app:layout_constraintEnd_toEndOf="@id/payment_details"
        app:layout_constraintStart_toStartOf="@id/payment_details"
        app:layout_constraintTop_toBottomOf="@id/payment_details" />

    <TextView
        android:id="@+id/name_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Adnan Akhtar"
        android:textColor="@color/Main_color"
        android:textFontWeight="500"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />


    <TextView
        android:id="@+id/time_date_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Time &amp; Date"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_popup" />

    <TextView
        android:id="@+id/time_date_popup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="28 / 09/ 2021 , 10 : 21 AM"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="12dp"
        android:alpha="0.5"
        android:layout_marginRight="29dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_date_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time_date_popup" />

    <TextView
        android:id="@+id/session_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Sessions Purchased"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="16dp"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_date_popup" />

    <TextView
        android:id="@+id/session_purchased1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="29dp"
        android:alpha="0.5"
        android:fontFamily="@font/poppins_medium"
        android:text="4"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/session_purchased"
        app:layout_constraintEnd_toEndOf="@+id/time_date_popup1"
        app:layout_constraintStart_toStartOf="@+id/time_date_popup1"
        app:layout_constraintTop_toTopOf="@+id/session_purchased" />


    <View
        android:id="@+id/line_16"
        android:layout_width="112dp"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:layout_marginTop="202dp"
        android:background="@drawable/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="@id/line_15"
        app:layout_constraintStart_toStartOf="@+id/line_15"
        app:layout_constraintTop_toBottomOf="@+id/payment_details" />

    <TextView
        android:id="@+id/total_payment_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Total Payment"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="16dp"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_16" />


</androidx.constraintlayout.widget.ConstraintLayout>