<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragments.Approved_PAyments_Details">

    <View
        android:id="@+id/ss_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#D2EFFC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ss_view">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginLeft="13dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Date &amp; Time"
        android:textColor="@color/black"
        android:textSize="14dp"
       />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="Sessions"
        android:textColor="@color/black"
        android:textSize="14dp"
     />


    <TextView
        android:id="@+id/textView20"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginRight="7dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="Cost"
        android:textColor="@color/black"
        android:textSize="14dp"
         />
        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Reciept"
            android:textColor="@color/black"
            android:textSize="14dp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/approved_payment_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ss_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>