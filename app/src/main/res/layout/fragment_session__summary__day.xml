<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".activity.Session_Summary_Day">

    <View
        android:id="@+id/ss_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#D2EFFC"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Doctor"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/ss_view"
        app:layout_constraintLeft_toLeftOf="@id/ss_view"
        app:layout_constraintTop_toTopOf="@+id/ss_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/ss_view"
        app:layout_constraintEnd_toStartOf="@+id/textView20"
        app:layout_constraintLeft_toLeftOf="@id/ss_view"
        app:layout_constraintRight_toRightOf="@id/ss_view"
        app:layout_constraintStart_toEndOf="@+id/textView32"
        app:layout_constraintTop_toTopOf="@+id/ss_view" />


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Session Taken"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/ss_view"
        app:layout_constraintRight_toRightOf="@id/ss_view"
        app:layout_constraintTop_toTopOf="@+id/ss_view" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/diaryRecyclerViewDay"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/ss_view"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>