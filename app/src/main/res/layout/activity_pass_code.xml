<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.Pass_code">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:ignore="NewApi" />
    <ImageView
android:id="@+id/pc_bell"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="336dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_notifications_none_24"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:ignore="MissingConstraints"
        app:tint="@color/text_blue" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Passcode"
        android:textColor="@color/text_blue"
        android:fontFamily="@font/poppins_medium"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"/>
    <ImageView
        android:id="@+id/back_arrow_22"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginRight="336dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:ignore="MissingConstraints"
        app:tint="#004481" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="86dp"
        android:layout_marginRight="240dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Enter Passcode"
        android:textColor="@color/text_blue"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Main_color"
        app:bar_active_color="@color/text_blue"
        app:bar_enabled="true"
        app:bar_height="3dp"
        android:layout_marginTop="50dp"
        app:bar_inactive_color="@color/hint_color"
        app:height="60dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        app:length="4"
        app:otp_box_background_active="@drawable/ic_otp_box"
        app:otp_box_background_inactive="@drawable/ic_otp_box_inactive"
        app:otp_text_size="24dp"
        app:width="50dp" />
    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_margin="20dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>